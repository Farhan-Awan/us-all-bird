}
.ash-tit-txt h2 {
      text-align: center;
      font-size: 30px;
      color: #212a2f;
}
.ash-field-btn-container {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 auto;
  gap: 10px;
}
.ash-span-mailtxt{
  text-align: center;
