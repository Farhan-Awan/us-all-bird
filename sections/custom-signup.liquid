     .ash-tit-txt p{width: 80%;}
    .ash-field-btn-container{flex-direction: column;}
    input#ash-field{width: 80%;}
  .ash-f-btn{width: 288px;}
  .ash-span-mailtxt{font-size: 10px; flex-direction: column; gap: 0;}
  
}
